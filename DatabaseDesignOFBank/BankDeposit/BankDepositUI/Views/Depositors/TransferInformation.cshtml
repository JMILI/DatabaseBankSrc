@{
    Layout = "_SignInLayout";
}
    <form name="form1" class="form-horizontal" role="form" method="post" action="@Url.Action("VerifyPassword","Depositors")" onSubmit="return beforeSubmit(this);">
        <div class="form-group">
            <label for="YourName" class="col-sm-4 control-label">对方账号</label>
            <div class="col-sm-8">
                <input type="text" class="form-control colorpicker-element" id="colorpicker" name="TpartyBcid" value="">
            </div>
        </div>
        <div class="form-group">
            <label for="colorpicker-rgb" class="col-sm-4 control-label">转账金额</label>
            <div class="col-sm-8">
                <input type="text" class="form-control colorpicker-element" id="colorpicker-rgb" name="TtransferBalance" value="">
            </div>
        </div>
        <div class="col-sm-offset-4 col-sm-8">
            <button type="submit" class="btn btn-greensea">提交</button>
            <button type="reset" class="btn btn-red">重新输入</button>
        </div>
    </form>
<script type="text/javascript">
    function beforeSubmit(form) {
        if (form.TpartyBcid.value == '') {
            alert('账号不能为空！');
            form.TpartyBcid.focus();
            return false;
        }
        if (form.TtransferBalance.value == '') {
            alert('转账金额不能为空！');
            form.TtransferBalance.focus();
            return false;
        }
        }
    }
</script>
